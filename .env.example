# Neo4j Configuration
NEO4J_URI=neo4j://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password123

# Neo4j Connection Settings
NEO4J_CONNECT_TIMEOUT=20
NEO4J_MAX_RETRY_TIME=5
NEO4J_AUTH_ENABLED=true
NEO4J_server_bolt_enabled=true

# Data Generation Settings
NUM_CUSTOMERS=100
NUM_PRODUCTS=50
NUM_ORDERS=200
NUM_TRANSACTIONS=300
NUM_SUPPLIERS=10
NUM_CAMPAIGNS=5

# Logging Configuration
LOG_LEVEL=DEBUG

# Container Configuration
DEBIAN_FRONTEND=noninteractive

# Network Configuration
NEO4J_server_default_listen_address=0.0.0.0
NEO4J_server_bolt_advertised_address=:7687

# Neo4j Plugins Configuration
NEO4J_ACCEPT_LICENSE_AGREEMENT=yes
NEO4J_PLUGINS=["apoc"]
NEO4J_dbms_security_procedures_unrestricted=apoc.*,gds.*